{
  "name": "mic-global",
  "version": "1.1.15",
  "description": "",
  "keywords": [
    "theme",
    "component",
    "global",
    "mic"
  ],
  "main": "build/lib/index.js",
  "module": "build/es/index.js",
  "unpkg": "build/dist/index.min.js",
  "typings": "build/lib/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "npm run dist",
    "dist": "webpack --mode=production -p",
    "es": "tsc --module esnext --outDir build/es --target esnext",
    "lib": "tsc --module commonjs --outDir build/lib --target es5",
    "lint-all": "eslint --ext .tsx,.ts src/",
    "prebuild": "npm run es",
    "prees": "npm run lib",
    "prepare": "npm run build",
    "start": "webpack-dev-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/china-liji/mic-global"
  },
  "author": "Michael Lee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/china-liji/mic-global/issues"
  },
  "homepage": "https://github.com/china-liji/mic-global#readme",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-jss": "^10.1.1",
    "jss": "^10.3.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "css-loader": "^3.5.3",
    "eslint": "^7.1.0",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.1",
    "typescript": "^3.9.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "npm run lint-all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
